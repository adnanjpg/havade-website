---
import { SEO } from "astro-seo"
import Footer from "@components/footer.astro"
import Navbar from "@components/navbar/navbar.astro"
import "@fontsource-variable/inter/index.css"
import "@fontsource-variable/bricolage-grotesque"

export interface Props {
  title: string
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString()

const resolvedImageWithDomain = new URL("/opengraph.jpg", Astro.site).toString()

const { title } = Astro.props

const makeTitle = title
  ? title + " | " + "Havade"
  : "Havade: Your Gateway to Diverse News Perspectives"
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Bringing you alternative sources, multilingual perspectives, and AI-driven summaries for a complete news experience."
      canonical={canonicalURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: "Havade: Your Gateway to Diverse News Perspectives",
          image: resolvedImageWithDomain,
        },
        image: { alt: "Havade Homepage Screenshot" },
      }}
      }
    />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
